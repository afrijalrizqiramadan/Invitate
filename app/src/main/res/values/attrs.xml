<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="DPCircleImageView">
        <attr name="name" format="string" />
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
    <declare-styleable name="DPDotsIndicator">
        <attr name="dot_width" format="dimension" />
        <attr name="dot_height" format="dimension" />
        <attr name="dot_margin" format="dimension" />

        <attr name="dot_drawable" format="reference" />
        <attr name="dot_drawable_unselected" format="reference" />
        <attr name="dot_tint" format="color" />

        <attr name="dots_animator" format="reference" />
        <attr name="dots_animator_reverse" format="reference" />

        <attr name="dp_dots_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="dp_dots_gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="fill_horizontal" value="0x07" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="clip_vertical" value="0x80" />
            <flag name="clip_horizontal" value="0x08" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
    </declare-styleable>
    <declare-styleable name="DPSwipeRevealLayout">
        <attr name="dp_dragEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>

        <attr name="dp_mode">
            <enum name="normal" value="0" />
            <enum name="same_level" value="1" />
        </attr>

        <attr name="dp_flingVelocity" format="integer" />

        <attr name="dp_minDistRequestDisallowParent" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DPDonutProgress">
        <attr name="dp_progress" format="integer" />
        <attr name="dp_max" format="integer" />
        <attr name="dp_unfinished_color" format="color" />
        <attr name="dp_finished_color" format="color" />
        <attr name="dp_finished_stroke_width" format="dimension" />
        <attr name="dp_unfinished_stroke_width" format="dimension" />
        <attr name="dp_text_size" format="dimension" />
        <attr name="dp_text_color" format="color" />
        <attr name="dp_prefix_text" format="string" />
        <attr name="dp_suffix_text" format="string" />
        <attr name="dp_text" format="string" />
        <attr name="dp_background_color" format="color" />
        <attr name="dp_inner_bottom_text" format="string" />
        <attr name="dp_inner_bottom_text_size" format="dimension" />
        <attr name="dp_inner_bottom_text_color" format="color" />
        <attr name="dp_circle_starting_degree" format="integer" />
        <attr name="dp_show_text" format="boolean" />
        <attr name="dp_inner_drawable" format="reference" />
    </declare-styleable>
    <declare-styleable name="DPShimmerRecyclerView">
        <attr name="shimmer_demo_layout" format="reference" />
        <attr name="shimmer_demo_child_count" format="integer|reference" />
        <attr name="shimmer_demo_layout_manager_type" format="enum">
            <enum name="linear_vertical" value="0" />
            <enum name="linear_horizontal" value="1" />
            <enum name="grid" value="2" />
        </attr>
        <attr name="shimmer_demo_grid_child_count" format="integer|reference" />
        <attr name="shimmer_demo_shimmer_color" format="color|reference" />
        <attr name="shimmer_demo_angle" format="integer|reference" />
        <attr name="shimmer_demo_view_holder_item_background" format="color|reference" />
        <attr name="shimmer_demo_duration" format="integer|reference" />
        <attr name="shimmer_demo_mask_width" format="float|reference" />
        <attr name="shimmer_demo_reverse_animation" format="boolean|reference" />
    </declare-styleable>
    <declare-styleable name="DPSwipe_Layout">
        <!--where view must be located in default state-->
        <attr name="DPswipe_gravity">
            <enum name="left" value="-1" />
            <enum name="right" value="1" />
            <enum name="center" value="0" />
        </attr>

        <!--Does view should been stick after touch up-->
        <attr name="DPsticky" format="dimension">
            <!--stick mode is off-->
            <enum name="none" value="-2" />
            <!--stick view if it has reached offset equals to its width-->
            <enum name="self" value="-1" />
        </attr>
        <attr name="DPsticky_sensitivity" format="float" />

        <!--the maximum offset that view can be moved-->
        <attr name="DPclamp" format="dimension">
            <enum name="parent" value="-1" />
            <enum name="self" value="-2" />
        </attr>

        <!--move view to clamp if the offset reached this value-->
        <attr name="DPbring_to_clamp" format="dimension">
            <enum name="no" value="-1" />
        </attr>

        <!--enable or disable swipe gestures -->
        <attr name="DPswipe_enabled" format="boolean" />

        <!--enable or disable swipe gestures from left side-->
        <attr name="DPleft_swipe_enabled" format="boolean" />

        <!--enable or disable swipe gestures from right side-->
        <attr name="DPright_swipe_enabled" format="boolean" />

    </declare-styleable>
    <declare-styleable name="DPHorizontalExpCalendar">
        <attr name="top_container_height" format="dimension" />
        <attr name="center_container_expanded_height" format="dimension" />
        <attr name="bottom_container_height" format="dimension" />
        <attr name="expanded" format="boolean" />
    </declare-styleable>

</resources>
