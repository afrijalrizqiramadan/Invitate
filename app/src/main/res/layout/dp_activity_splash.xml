<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dp_app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/logo" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_standard"
            android:textAppearance="@style/DPFontBold"
            android:textColor="@color/dp_colorPrimary"
            android:textSize="@dimen/dp_font_size_xxLarge"
            android:textStyle="bold" />



    </LinearLayout>

    <TextView
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dp_lbl_by"
        android:textColor="@color/dp_textColorSecondary"
        android:textSize="@dimen/_14sdp" />
    <TextView
        style="@style/DPFontBold"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fastech"
        android:textStyle="bold"
        android:padding="@dimen/dp_spacing_control"
        android:textColor="@color/dp_blue"
        android:shadowColor="@color/dp_blue_hours"
        android:textSize="@dimen/_20sdp" />

</RelativeLayout>