<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_spacing_standard_new"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_spacing_standard_new">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_spacing_standard_new">

        <TextView
            android:id="@+id/tvSpecialistName"
            style="@style/DPHeading"
            android:layout_gravity="center_horizontal"
            android:text="Mengakhiri Percakapan"
            android:textSize="@dimen/dp_font_size_large" />

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_spacing_standard_new"
            android:src="@drawable/dp_ic_check_circle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_standard_new"
            android:gravity="center_horizontal"
            android:text="Apakah anda yakin ingin mengakhiri?"
            android:textColor="@color/dp_textColorPrimary"
            android:textSize="@dimen/dp_font_size_medium" />


        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_large"
            android:background="@color/dp_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnYes"
                style="@style/DPButtonStyleStroked"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/_11sdp"
                android:text="Ya"
                android:textColor="@color/dp_textColorSecondary" />

            <TextView
                android:id="@+id/btnNo"
                style="@style/DPButtonStyle"
                android:layout_width="0dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:text="Tidak" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>