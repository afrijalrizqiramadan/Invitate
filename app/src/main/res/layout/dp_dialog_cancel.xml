<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_spacing_standard_new"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_spacing_standard_new">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <TextView
            android:id="@+id/tvSpecialistName"
            style="@style/DPSubHeading"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="Masukkan alasan anda"
            android:textSize="@dimen/dp_font_size_large" />

        <EditText
            android:id="@+id/edText"
            style="@style/DPTextArea"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/dp_spacing_standard_new"
            android:layout_marginEnd="0dp"
            android:textColor="@color/dp_textColorPrimary" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_large"
            android:background="@color/dp_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnCancel"
                style="@style/DPButtonStyleStroked"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/_11sdp"
                android:text="@string/tv_lbl_cancel"
                android:textColor="@color/dp_textColorSecondary" />

            <TextView
                android:id="@+id/btnApply"
                style="@style/DPButtonStyle"
                android:layout_width="0dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:text="@string/dp_lbl_apply" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>