<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    android:layout_marginBottom="@dimen/dp_spacing_standard"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dp_shadoe"
        android:orientation="horizontal"
        android:padding="@dimen/dp_spacing_standard_new">

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/dp_spacing_standard"
            android:background="@color/demo_light_transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_spacing_standard_new"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="top"
                android:background="@color/demo_light_transparent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/dp_spacing_standard"
                android:background="@color/demo_light_transparent" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>