<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_spacing_standard_new"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_spacing_standard_new">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_spacing_standard_new">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/dp_ic_triangle" />

        <TextView
            style="@style/DPHeading"
            android:layout_marginTop="@dimen/dp_spacing_large"
            android:layout_marginBottom="@dimen/dp_spacing_large"
            android:text="Update Aplikasi"
            android:textSize="26sp" />

        <TextView
            style="@style/DPSubHeading"
            android:layout_marginStart="@dimen/dp_spacing_standard_new"
            android:layout_marginEnd="@dimen/dp_spacing_standard_new"
            android:gravity="center"
            android:text="Anda masih menggunakan versi lama dari aplikasi. Silahkan update aplikasi untuk dapat menggunakannya kembali" />

        <TextView
            android:id="@+id/tvOK"
            style="@style/DPButtonStyle"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_large"
            android:paddingStart="@dimen/dp_spacing_xxLarge"
            android:paddingEnd="@dimen/dp_spacing_xxLarge"
            android:text="OK" />
    </LinearLayout>
</androidx.cardview.widget.CardView>