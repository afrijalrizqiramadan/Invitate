<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <!-- Drop Shadow Stack -->

    <item>
        <shape android:shape="oval">

            <solid android:color="@color/dp_white" />

            <corners android:radius="@dimen/dp_spacing_standard" />
        </shape>
    </item>

    <!-- Background -->
    <item
        android:id="@+id/itemStatus"
        android:bottom="@dimen/_4sdp"
        android:left="@dimen/_4sdp"
        android:right="@dimen/_4sdp"
        android:top="@dimen/_4sdp">
        <shape android:shape="oval">
            <solid android:color="@color/dp_light_green" />

            <corners android:radius="@dimen/dp_spacing_standard" />
        </shape>
    </item>

</layer-list>